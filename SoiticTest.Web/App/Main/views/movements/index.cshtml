<div class="row clearfix" ng-controller="app.views.movements.index as vm">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card main-content">
            <div class="header">
                <h2>
                    @L("Movements")
                </h2>
                <ul class="header-dropdown m-r--5">
                    <i class="fa fa-spin fa-spinner" ng-if="isTableLoading"></i>
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" movement="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);" class="waves-effect <waves-block></waves-block>" ng-click="vm.refresh();"><i class="material-icons">refresh</i> Refresh</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body table-responsive">

                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th class="text-center"> - </th>
                            <th class="text-center">Produto</th>
                            <th class="text-center">Usuário</th>
                            <th class="text-center">Alteração no estoque</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        <tr ng-repeat="movement in vm.movements">

                            <td style="font-size: 36px; font-weight: bold; line-height: 24px;" ng-class="{'-': 'text-danger', '+': 'text-success', '=': 'text-info'}[movement.signal]">{{movement.signal}}</td>
                            <td>{{movement.product}}</td>
                            <td>{{movement.user}}</td>
                            <td>{{movement.previousQtd}} >> {{movement.currentQtd}}</td>
                            </tr>
                        </tbody>
                    </table>

                    <button type="button" data-toggle="modal" class="btn btn-primary btn-circle waves-effect waves-circle waves-float pull-right" ng-click="vm.openMovementCreationModal()">
                        <i class="material-icons">add</i>
                    </button>
                </div>
            </div>
        </div>
    </div>
