<form id="frm_create_product" name="productCreateForm" novalidate>
    <div class="modal-header">
        <button type="button" class="close" ng-click="vm.cancel()" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">
            <span>@L("Products")</span>
        </h4>
    </div>
    <div class="modal-body">
        <uib-tabset class="tab-container tabbable-line">
            <uib-tab heading="Detalhes do Produto">
                <div class="row clearfix" style="margin-top:10px;">
                    <div class="col-sm-6">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="productname" type="text" name="name" ng-model="vm.product.name" required maxlength="100" minlength="2" class="validate form-control">
                                <label for="productname" class="form-label">@L("Name")</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="brand" type="text" name="brand" ng-model="vm.product.brand" required maxlength="60" class="validate form-control">
                                <label for="brand" class="form-label">@L("Brand")</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row clearfix">
                    <div class="col-sm-6">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="entryDate" type="text" name="entryDate" ng-model="vm.product.entryDate" required maxlength="60" class="validate form-control datepicker">
                                <label for="entryDate" class="form-label">@L("EntryDate")</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="expirationDate" type="text" name="expirationDate" ng-model="vm.product.expirationDate" required maxlength="60" class="validate form-control datepicker">
                                <label for="expirationDate" class="form-label">@L("ExpirationDate")</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row clearfix">
                    <div class="col-sm-6">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="stock" type="number" min="1" name="stock" ng-model="vm.product.stock" required maxlength="60" class="validate form-control">
                                <label for="stock" class="form-label">@L("Stock")</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="value" type="text" name="value" ng-model="vm.product.value" required maxlength="60" class="validate form-control">
                                <label for="value" class="form-label">@L("Value")</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row clearfix">
                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <textarea id="description" name="description" ng-model="vm.product.description" required maxlength="300" class="validate form-control"></textarea>
                                <label for="description" class="form-label">@L("Description")</label>
                            </div>
                        </div>
                    </div>
                </div>



            </uib-tab>
            <uib-tab heading="@L("Providers")">
                <div class="row">
                    <div class="col-sm-12 ">
                        <div class="col-sm-6" ng-repeat="provider in vm.providers">
                            <input type="checkbox" name="provider" value="{{provider.id}}" title="{{provider.name}}" class="filled-in" id="role-{{provider.id}}" checked="checked" ng-model="provider.isAssigned" />
                            <label for="role-{{provider.id}}" title="{{provider.name}}">{{provider.name}}</label>
                        </div>
                    </div>
                </div>
            </uib-tab>
        </uib-tabset>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" ng-click="vm.cancel()">
            @L("Cancel")
        </button>
        <button type="submit" class="btn btn-primary waves-effect" ng-click="vm.save()" ng-disabled="productCreateForm.$invalid">
            @L("Save")
        </button>
    </div>

</form>